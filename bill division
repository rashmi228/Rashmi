import java.util.*;

public class BonAppetit {

    // Function to check if Anna was overcharged
    static void bonAppetit(List<Integer> bill, int k, int bCharged) {
        // Calculate the total excluding the item Anna didn't eat
        int total = 0;
        for (int i = 0; i < bill.size(); i++) {
            if (i != k) {
                total += bill.get(i);
            }
        }

        // Actual share Anna should pay
        int bActual = total / 2;

        // Compare with what Brian charged
        if (bCharged == bActual) {
            System.out.println("Bon Appetit");
        } else {
            System.out.println(bCharged - bActual);
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Read n and k
        int n = sc.nextInt();
        int k = sc.nextInt();

        // Read bill items
        List<Integer> bill = new ArrayList<>();
        for (int i = 0; i < n; i++) {
            bill.add(sc.nextInt());
        }

        // Read charged amount
        int bCharged = sc.nextInt();

        // Call function
        bonAppetit(bill, k, bCharged);

        sc.close();
    }
}
